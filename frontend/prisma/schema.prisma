generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cohort {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  teams  Team[]
  qrcodes QRCode[]
}

model Team {
  id           String   @id             
  name         String
  currentLevel Int      @default(0)
  cohortId     Int
  cohort       Cohort   @relation(fields: [cohortId], references: [id])
}


model QRCode {
  id        Int     @id @default(autoincrement())
  flag     String  @unique
  level     Int
  cohortId  Int
  cohort    Cohort  @relation(fields: [cohortId], references: [id])
}


